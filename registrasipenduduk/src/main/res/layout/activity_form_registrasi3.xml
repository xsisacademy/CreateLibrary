<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormRegistrasi3"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Form Registrasi 3"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pastikan data yang Anda masukkan sudah benar dan tepat, sebelum menekan tombol Selesaikan Proses Registrasi"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"/>


    <Button
        android:id="@+id/registerSekarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selesaikan Proses Registrasi"
        android:layout_margin="10dp"
        android:layout_gravity="right"/>

</LinearLayout>